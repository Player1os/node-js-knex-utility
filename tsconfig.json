{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"baseUrl": ".",
		"paths": {
			"*": [
				"*"
			],
			"#/*": [
				"./*"
			]
		}
	},
	"exclude": [
		"lib",
		"node_modules"
	]
}
