{
  "name": "library",
  "version": "1.0.0",
  "description": "A base library from which other libraries can be derived",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "~6.10.3",
    "npm": "~3.10.10"
  },
  "scripts": {
    "preversion": "git checkout . && git checkout master && git pull && npm run validate",
    "postversion": "git push && git push --tags && npm run clean && npm run build && npm run copy_build_to_lib && npm publish",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf .awcache && rimraf build/* && rimraf lib/*",
    "copy_build_to_lib": "mkdirp lib && cpr build/types/src/index.d.ts lib/index.d.ts --overwrite && cpr build/lib/ lib/ --overwrite",
    "execute": "ts-node -r @player1os/bluebird-global -r tsconfig-paths/register",
    "lint": "tslint {./,src/**/,test/**/}*.ts --type-check --project ./tsconfig.json",
    "lint:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "npm run execute -- test/index.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/node-js-library.git"
  },
  "keywords": [
    "library"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/node-js-library/issues"
  },
  "homepage": "https://github.com/Player1os/node-js-library#readme",
  "devDependencies": {
    "@player1os/bluebird-global": "^1.0.0",
    "@player1os/tslint-config": "^1.1.1",
    "@types/bluebird-global": "^3.5.2",
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.21",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "bluebird": "^3.5.0",
    "chai": "^4.0.0",
    "chokidar": "^1.7.0",
    "cpr": "^2.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.1",
    "nyc": "^11.0.1",
    "recursive-readdir-sync": "^1.0.6",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.4",
    "tsconfig-paths": "^2.2.0",
    "tslint": "^5.2.0",
    "tsutils": "1.6.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  }
}
