{
  "name": "@player1os/knex-wrapper",
  "version": "1.2.6",
  "description": "A wrapper for the knex module that takes care of connecting/disconnecting, as well as many helper components",
  "private": false,
  "main": "index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "~6.10.3",
    "npm": "~3.10.10"
  },
  "scripts": {
    "preversion": "git checkout . && git checkout master && git pull && npm run clean && npm run validate",
    "postversion": "git push && git push --tags && npm publish",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf index.js* && rimraf types",
    "execute": "ts-node -r @player1os/bluebird-global -r module-alias/register",
    "lint": "tslint {./,src/**/,test/**/}*.ts --type-check --project ./tsconfig.json",
    "lint:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "npm run execute -- test/index.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/node-js-knex-wrapper.git"
  },
  "keywords": [
    "knex",
    "wrapper"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/node-js-knex-wrapper/issues"
  },
  "homepage": "https://github.com/Player1os/node-js-knex-wrapper#readme",
  "dependencies": {
    "@player1os/base-error": "^1.0.5",
    "knex": "^0.13.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@player1os/bluebird-global": "^1.0.0",
    "@player1os/tslint-config": "^1.3.1",
    "@types/bluebird-global": "^3.5.2",
    "@types/chai": "^4.0.0",
    "@types/knex": "0.0.53",
    "@types/lodash": "^4.14.65",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.21",
    "@types/rimraf": "0.0.28",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "bluebird": "^3.5.0",
    "chai": "^4.0.0",
    "chokidar": "^1.7.0",
    "cpr": "^2.1.0",
    "mocha": "^3.4.1",
    "module-alias": "^2.0.0",
    "nyc": "^11.0.1",
    "recursive-readdir-sync": "^1.0.6",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tsutils": "1.6.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "_moduleAliases": {
    "...": "."
  }
}
